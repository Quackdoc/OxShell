<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.OxShell.FullscreenContainer"
    tools:context=".HomeActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <com.appspell.shaderview.ShaderView
        android:id="@+id/bgShader"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.OxGames.OxShell.Views.HomeView
        android:id="@+id/home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="256px"
        android:horizontalSpacing="16px"
        android:listSelector="#00000000"
        android:numColumns="auto_fit"
        android:padding="16px"
        android:verticalSpacing="16px">

    </com.OxGames.OxShell.Views.HomeView>

    <com.OxGames.OxShell.Views.PackagesView
        android:id="@+id/packages_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone"></com.OxGames.OxShell.Views.PackagesView>

    <com.OxGames.OxShell.Views.SettingsView
        android:id="@+id/settings_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone">
    </com.OxGames.OxShell.Views.SettingsView>

    <com.OxGames.OxShell.Views.CustomizeHomeView
        android:id="@+id/customize_home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone">
    </com.OxGames.OxShell.Views.CustomizeHomeView>

    <com.OxGames.OxShell.Views.AssocListView
        android:id="@+id/assoc_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone"></com.OxGames.OxShell.Views.AssocListView>

    <com.OxGames.OxShell.Views.SelectDirsView
        android:id="@+id/selectdirs_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone"></com.OxGames.OxShell.Views.SelectDirsView>

    <com.OxGames.OxShell.Views.IntentShortcutsView
        android:id="@+id/shortcuts_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone"></com.OxGames.OxShell.Views.IntentShortcutsView>

</FrameLayout>