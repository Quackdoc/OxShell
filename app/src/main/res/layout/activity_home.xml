<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <!--    android:background="@color/purple_200"-->
    <!--    android:theme="@style/ThemeOverlay.OxShell.FullscreenContainer"-->


    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <com.OxGames.OxShell.Views.HomeView
        android:id="@+id/home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.OxGames.OxShell.Views.PackagesView
        android:id="@+id/packages_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone" />

    <com.OxGames.OxShell.Views.SettingsView
        android:id="@+id/settings_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone" />

    <com.OxGames.OxShell.Views.CustomizeHomeView
        android:id="@+id/customize_home_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone" />

    <com.OxGames.OxShell.Views.AssocListView
        android:id="@+id/assoc_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone" />

    <com.OxGames.OxShell.Views.SelectDirsView
        android:id="@+id/selectdirs_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone" />

    <com.OxGames.OxShell.Views.IntentShortcutsView
        android:id="@+id/shortcuts_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/settings_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="#8000A6FF">
    </FrameLayout>

</FrameLayout>