<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplorerActivity">

    <com.appspell.shaderview.ShaderView
        android:id="@+id/bgShader"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.OxGames.OxShell.Views.ExplorerView
        android:id="@+id/explorer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:listSelector="#00000000"
        android:scrollbarStyle="insideInset"
        android:visibility="visible"></com.OxGames.OxShell.Views.ExplorerView>
</FrameLayout>